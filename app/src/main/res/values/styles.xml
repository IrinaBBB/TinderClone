<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StandardButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/standard_button_text_size</item>
<!--        <item name="android:foreground">?attr/selectableItemBackground</item>-->
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/standard_button_rounded</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">#efefef</item>
    </style>

    <style name="TinderOutlineTextBoxStyle"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="startIconTint">@color/tinder_main</item>
<!--        <item name="boxStrokeColor">@color/tinder_main</item>-->
    </style>

    <style name="MyTextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>